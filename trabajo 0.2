body {
    font-family: 'Arial', sans-serif; /* Tipo de fuente */
    line-height: 1.6; /* Altura de línea */
    margin: 20px; /* Margen del cuerpo */
    color: #333; /* Color de texto */
}

h4 {
    font-size: 1.5em; /* Tamaño del título */
    margin-bottom: 10px; /* Espacio inferior */
    color: #2c3e50; /* Color del título */
}

ul {
    margin-left: 20px; /* Sangría a la izquierda */
    list-style-type: disc; /* Tipo de lista */
}

p {
    margin: 10px 0; /* márgenes superior e inferior */
    font-size: 1em; /* Tamaño de fuente */
}

a {
    color: #e74c3c; /* Color del enlace */
    text-decoration: none; /* Sin subrayado */
}

a:hover {
    text-decoration: underline; /* Subrayado en hover */
}
